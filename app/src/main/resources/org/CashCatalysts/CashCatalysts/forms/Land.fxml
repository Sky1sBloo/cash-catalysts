<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="land_pane" alignment="CENTER" prefHeight="214.0" prefWidth="287.0" stylesheets="@Land.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox fx:id="plant_pane" alignment="TOP_CENTER" prefHeight="61.0" prefWidth="246.0">
         <children>
              <Label fx:id="plant_type" styleClass="land_txt" text="Plant">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="time_lbl" styleClass="land_txt" />
            <ImageView fx:id="plant_image" fitHeight="59.0" fitWidth="55.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons2/Apple.png" />
               </image>
            </ImageView>
              <HBox alignment="CENTER" prefHeight="33.0" prefWidth="304.0">
                  <children>
                      <ComboBox fx:id="seed_selection" prefWidth="150.0" />
                      <Button fx:id="plant_btn" mnemonicParsing="false" text="Plant" />
                  </children>
              </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                    <Button fx:id="harvest_btn" mnemonicParsing="false" text="Harvest" />
                  <Button fx:id="water_btn" mnemonicParsing="false" text="Water" />
                  <Button fx:id="cheat_btn" mnemonicParsing="false" text="Cheat" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="pot_pane" alignment="TOP_CENTER" prefHeight="46.0" prefWidth="246.0">
         <children>
            <Button fx:id="add_pot_btn" mnemonicParsing="false" text="Add Pot" />
         </children>
      </VBox>
    </children>
</VBox>
